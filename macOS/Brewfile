# brew version
hb = `brew -v`

# fail if Homebrew is not installed, (or if it's not in $PATH)
if !hb.include? "Homebrew"
  abort("ERROR: Homebrew does not appear to be installed!")
end

# specify a directory to install
cask_args appdir: "/Applications"

# install packages
tap "homebrew/cask" || true
brew "zsh"
brew "zsh-completions"
brew "bash-completion"
brew "make"
brew "git"
brew "git-extras"
brew "git-secrets"
brew "tree"
brew "tmux"
brew "stow"
tap "neovim/neovim" || true
brew "neovim"
brew "awscli"
brew "curl"
brew "go"
brew "goenv"
brew "pyenv"
brew "pipx"
brew "jq"
brew "yq"
brew "ag"
brew "ripgrep"
brew "xz"
brew "wget"
brew "minikube"
brew "htop"
brew "tfenv"
brew "maven"
brew "gradle"
brew "sbt"
brew "watch"
brew "fzf"
brew "docker-completion"
brew "thefuck"
brew "fd"
